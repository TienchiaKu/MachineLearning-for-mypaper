#匯入pandas及csv檔
import pandas as pd
df =pd.read_csv('C:/Users/User/2015-2018  LG1_S302 filter.csv',index_col= 'Dates',parse_dates= True) 

#查看欄位
df.columns

#定義x,y資料
x= df.iloc[:,1:].values
# x_name= ['S21_302INV_ACALLKW','S21_302INV_ACAMP']
y= df.iloc[:,0].values
# y_name= ['S21_302INV_ALARM']

#資料分割訓練集與測試集(範例為80/20)
from sklearn.model_selection import train_test_split
x_train,x_test,y_train,y_test= train_test_split(x,y,test_size=0.2,random_state=0)

#匯入套件-標準化、主成分分析、邏輯斯迴歸、pipeline
from sklearn.preprocessing import StandardScaler
from sklearn.decomposition import PCA
from sklearn.linear_model import LogisticRegression
from sklearn.pipeline import Pipeline

#訓練並輸出準確率(檢驗方法一)
pipe_lr= Pipeline([('sci',StandardScaler()),('pca',PCA(n_components=2)),('clf', LogisticRegression(random_state=0))])
pipe_lr.fit(x_train,y_train)
print('Test accuracy: %3f' % pipe_lr.score(x_test,y_test))

#混淆矩陣(檢驗方法之二)
from sklearn.metrics import confusion_matrix
pipe_lr.fit(x_train,y_train)
y_pred= pipe_lr.predict(x_test)
conmat= confusion_matrix(y_true=y_test,y_pred=y_pred)
print(conmat)

#精準度、召回率、F1分數(檢驗方法之三)
from sklearn.metrics import precision_score
from sklearn.metrics import recall_score,f1_score
print('precision: %3f' % precision_score(y_true=y_test,y_pred=y_pred))
print('Recall: %3f' % recall_score(y_true=y_test,y_pred=y_pred))
print('F1: %3f'% f1_score(y_true=y_test,y_pred=y_pred))

#計算MSE值、R2值(檢驗方法之四)
y_train_pred= pipe_lr.predict(x_train)
y_test_pred= pipe_lr.predict(x_test)

from sklearn.metrics import mean_squared_error
print('MSE train: %.3f,test: %.3f' %(mean_squared_error(y_train,y_train_pred),mean_squared_error(y_test,y_test_pred)))

from sklearn.metrics import r2_score
print('R^2 train: %.3f,test: %.3f' %(r2_score(y_train,y_train_pred),r2_score(y_test,y_test_pred)))
